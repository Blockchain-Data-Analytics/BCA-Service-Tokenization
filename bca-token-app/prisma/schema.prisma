generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wallets {
  owner    String     @id
  email    String? 
  created  DateTime   @default(now())
}

model Credits {
  id       Int        @id @default(autoincrement())
  owner    String
  amount   Decimal
  created  DateTime   @default(now())
  txhash   String
}

model Debits {
  id       Int        @id @default(autoincrement())
  owner    String
  amount   Decimal
  created  DateTime   @default(now())
  service  String
  units    Decimal
}

model AdminAudit {
  id       Int        @id @default(autoincrement())
  user     String
  amount   Decimal
  action   String
  target   String
  txhash   String
  created  DateTime   @default(now())
}